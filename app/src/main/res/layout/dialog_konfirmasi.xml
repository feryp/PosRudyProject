<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_md"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_dialogi_konfirmasi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/work_sans_medium"
        android:gravity="center"
        android:text="@string/title_dialog_konfirmasi"
        android:textColor="@color/black"
        android:textSize="@dimen/font_md"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel_dialog"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_close_black"
        app:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_pesan_permintaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_lg"
        android:gravity="center"
        android:text="@string/permintaan_lupa_sandi_anda_akan_dikirim_sesuai_dengan_nama_pengguna_anda"
        android:textSize="@dimen/font_sm"
        android:fontFamily="@font/work_sans_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/title_dialogi_konfirmasi"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_nama_pengguna"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_sm"
        android:fontFamily="@font/work_sans_medium"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/font_sm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_pesan_permintaan"
        tools:text="tokoRP_tangerang" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_oke"
        android:layout_width="0dp"
        android:layout_height="56dp"
        style="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="44dp"
        android:text="@string/btn_oke"
        android:textSize="@dimen/font_md"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/work_sans_semi_bold"
        app:layout_constraintTop_toBottomOf="@id/txt_nama_pengguna"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>