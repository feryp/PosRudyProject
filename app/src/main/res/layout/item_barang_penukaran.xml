<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_md"
    android:paddingBottom="@dimen/padding_md"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/bg_border_bottom_silver"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_barang_tukar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/container_desc_barang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_sm"
        android:paddingEnd="@dimen/padding_sm">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_tipe_barang_penukaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="CUTLINE"
            android:textSize="@dimen/font_sm"
            android:textColor="@color/black"
            android:fontFamily="@font/work_sans_medium" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_artikel_barang_penukaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="SP633846-0011"
            android:textSize="@dimen/font_mds"
            android:textColor="@color/black"
            android:fontFamily="@font/work_sans_semi_bold"
            android:layout_marginTop="@dimen/margin_xsm" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_nama_barang_penukaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Mandarin Fade/Coral Matte - RP Optics Multilaser Red"
            android:textSize="@dimen/font_sm"
            android:textColor="@color/black_coral"
            android:fontFamily="@font/work_sans_regular"
            android:layout_marginTop="@dimen/margin_xsm" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_btn_kuantitas"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/container_desc_barang"
        app:layout_constraintBottom_toBottomOf="@id/container_desc_barang">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_minus_penukaran"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_minus_white"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_jumlah_barang_penukaran"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck,UnusedAttribute,TouchTargetSizeCheck" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_jumlah_barang_penukaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_xsm"
            android:layout_marginEnd="@dimen/margin_xsm"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:fontFamily="@font/work_sans_medium"
            android:gravity="center"
            android:hint="@string/txt_hint_0"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="@dimen/font_sm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_plus_penukaran"
            app:layout_constraintStart_toEndOf="@id/btn_minus_penukaran"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_plus_penukaran"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_plus_white"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/et_jumlah_barang_penukaran"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck,UnusedAttribute,TouchTargetSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>