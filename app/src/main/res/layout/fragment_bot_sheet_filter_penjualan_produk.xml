<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    tools:context=".ui.filter.fragment.BotSheetFilterPenjualanProdukFragment">

    <View
        android:id="@+id/toogle_botshet_filter"
        android:layout_width="63dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_md"
        android:background="@drawable/toggle_botsheet" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_md"
        android:padding="@dimen/padding_md">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/work_sans_medium"
            android:text="@string/title_filter"
            android:textColor="@color/black"
            android:textSize="@dimen/font_mds"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/subtitle_filter"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subtitle_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans_semi_bold"
            android:text="@string/title_filter_urutkan"
            android:textColor="@color/black"
            android:textSize="@dimen/font_xlg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_filter"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_close_botsheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:src="@drawable/ic_close_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="@dimen/margin_md"
        android:layout_marginEnd="@dimen/margin_md"
        android:layout_marginBottom="@dimen/margin_md"
        android:background="@color/line" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xsm"
        app:chipSpacing="10dp"
        app:chipSpacingHorizontal="10dp"
        android:paddingStart="16dp"
        app:singleLine="false"
        app:singleSelection="true"
        tools:ignore="RtlSymmetry">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_nama_produk_a_z"
            style="@style/CustomChipChoice"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/nama_produk_a_z"
            android:textSize="@dimen/font_sm"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:chipStartPadding="16dp"
            app:chipEndPadding="16dp"
            app:chipStrokeWidth="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_nama_produk_z_a"
            style="@style/CustomChipChoice"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/nama_produk_z_a"
            android:textSize="@dimen/font_sm"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:chipStartPadding="16dp"
            app:chipEndPadding="16dp"
            app:chipStrokeWidth="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_kategori_a_z"
            style="@style/CustomChipChoice"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/kategori_a_z"
            android:textSize="@dimen/font_sm"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:chipStartPadding="16dp"
            app:chipEndPadding="16dp"
            app:chipStrokeWidth="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_kategori_z_a"
            style="@style/CustomChipChoice"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/kategori_z_a"
            android:textSize="@dimen/font_sm"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:chipStartPadding="16dp"
            app:chipEndPadding="16dp"
            app:chipStrokeWidth="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_penjualan_terbesar"
            style="@style/CustomChipChoice"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/penjualan_terbesar"
            android:textSize="@dimen/font_sm"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:chipStartPadding="16dp"
            app:chipEndPadding="16dp"
            app:chipStrokeWidth="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_penjualan_terkecil"
            style="@style/CustomChipChoice"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/penjualan_terkecil"
            android:textSize="@dimen/font_sm"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:chipStartPadding="16dp"
            app:chipEndPadding="16dp"
            app:chipStrokeWidth="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_penjualan_kotor_terbesar"
            style="@style/CustomChipChoice"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/penjualan_kotor_terbesar"
            android:textSize="@dimen/font_sm"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:chipStartPadding="16dp"
            app:chipEndPadding="16dp"
            app:chipStrokeWidth="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_penjualan_kotor_terkecil"
            style="@style/CustomChipChoice"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/penjualan_kotor_terkecil"
            android:textSize="@dimen/font_sm"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:chipStartPadding="16dp"
            app:chipEndPadding="16dp"
            app:chipStrokeWidth="1dp" />

    </com.google.android.material.chip.ChipGroup>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/padding_md">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_terapkan_filter_produk"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            style="@style/Widget.MaterialComponents.Button"
            android:text="@string/btn_terapkan"
            android:textSize="@dimen/font_md"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/work_sans_semi_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.appcompat.widget.LinearLayoutCompat>