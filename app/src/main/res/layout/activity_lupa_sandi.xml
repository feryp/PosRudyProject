<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_md"
    tools:context=".ui.lupaSandi.LupaSandiActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo_rp_black"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:src="@drawable/im_logo_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/todo"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_masuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_lupa_sandi"
        android:fontFamily="@font/work_sans_bold"
        android:textSize="@dimen/font_xxxlg"
        android:textColor="@color/black_gunmetal"
        app:layout_constraintTop_toBottomOf="@id/logo_rp_black"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_rp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/work_sans_regular"
        android:text="@string/subtitle_pos_rudy_project"
        android:textColor="@color/sonic_silver"
        android:textSize="@dimen/font_sm"
        app:layout_constraintTop_toBottomOf="@id/title_masuk"
        tools:layout_editor_absoluteX="16dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_et_nama_pengguna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xlg"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:errorEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/title_rp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_nama_pengguna_lupa_sandi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_nama_pengguna"
            android:imeOptions="actionDone"
            android:inputType="textAutoCorrect"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_kirim"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        style="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="20dp"
        android:text="@string/btn_kirim"
        android:textSize="@dimen/font_md"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/work_sans_semi_bold"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>