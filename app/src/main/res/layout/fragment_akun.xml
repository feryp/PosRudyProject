<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.akun.fragment.AkunFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_akun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:title="Akun Saya"
            app:titleTextColor="@color/black"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.Tab"
            app:menu="@menu/menu_notification"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_header_akun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_primary"
        android:padding="@dimen/padding_md"
        android:layout_margin="@dimen/margin_md"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintBottom_toTopOf="@id/menu_ubah_akun">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_sign_out">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_toko_akun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtitle_toko"
                android:textSize="@dimen/font_sm"
                android:textColor="@color/white"
                android:fontFamily="@font/work_sans_regular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_nama_toko_akun"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_nama_toko_akun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rudy Project Tangerang"
                android:textSize="@dimen/font_md"
                android:textColor="@color/white"
                android:fontFamily="@font/work_sans_medium"
                app:layout_constraintTop_toBottomOf="@id/title_toko_akun"
                app:layout_constraintBottom_toTopOf="@id/tv_alamat_toko_akun"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_alamat_toko_akun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xsm"
                android:text="Ruko Golden Boulevard Blok W2 No.12 BSD City, Lengkong Karya, Kec. Serpong Utara, Kota Tangerang Selatan, Banten 15320"
                android:textSize="@dimen/font_xs"
                android:textColor="@color/white"
                android:fontFamily="@font/work_sans_regular"
                app:layout_constraintTop_toBottomOf="@id/tv_nama_toko_akun"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sign_out"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:backgroundTint="@color/white"
            app:icon="@drawable/ic_sign_out"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/neon_blue_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menu_ubah_akun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_md"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout_header_akun">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_border_bottom_silver">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_md"
                android:text="@string/menu_ubah_akun"
                android:textColor="@color/black_gunmetal"
                android:textSize="@dimen/font_mds"
                android:fontFamily="@font/work_sans_medium"
                android:drawablePadding="@dimen/padding_md"
                android:drawableStart="@drawable/ic_user_square"
                android:drawableEnd="@drawable/ic_arrow_next_black"/>

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menu_riwayat_transaksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@id/menu_ubah_akun">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_border_bottom_silver">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_md"
                android:text="@string/menu_riwayat_transaksi"
                android:textColor="@color/black_gunmetal"
                android:textSize="@dimen/font_mds"
                android:fontFamily="@font/work_sans_medium"
                android:drawablePadding="@dimen/padding_md"
                android:drawableStart="@drawable/ic_clipboard_notes"
                android:drawableEnd="@drawable/ic_arrow_next_black"/>

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menu_pengaturan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@id/menu_riwayat_transaksi">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_border_bottom_silver">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_md"
                android:text="@string/menu_pengaturan"
                android:textColor="@color/black_gunmetal"
                android:textSize="@dimen/font_mds"
                android:fontFamily="@font/work_sans_medium"
                android:drawablePadding="@dimen/padding_md"
                android:drawableStart="@drawable/ic_setting"
                android:drawableEnd="@drawable/ic_arrow_next_black"/>

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menu_bantuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@id/menu_pengaturan">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_border_bottom_silver">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_md"
                android:text="@string/menu_bantuan"
                android:textColor="@color/black_gunmetal"
                android:textSize="@dimen/font_mds"
                android:fontFamily="@font/work_sans_medium"
                android:drawablePadding="@dimen/padding_md"
                android:drawableStart="@drawable/ic_help"
                android:drawableEnd="@drawable/ic_arrow_next_black"/>

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menu_privacy_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@id/menu_bantuan">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_border_bottom_silver">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_md"
                android:text="@string/menu_kebijakan_pribadi"
                android:textColor="@color/black_gunmetal"
                android:textSize="@dimen/font_mds"
                android:fontFamily="@font/work_sans_medium"
                android:drawablePadding="@dimen/padding_md"
                android:drawableStart="@drawable/ic_shield"
                android:drawableEnd="@drawable/ic_arrow_next_black"/>

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menu_terms_and_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@id/menu_privacy_policy">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_border_bottom_silver">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_md"
                android:text="@string/menu_syarat_dan_ketentuan"
                android:textColor="@color/black_gunmetal"
                android:textSize="@dimen/font_mds"
                android:fontFamily="@font/work_sans_medium"
                android:drawablePadding="@dimen/padding_md"
                android:drawableStart="@drawable/ic_file_info"
                android:drawableEnd="@drawable/ic_arrow_next_black"/>

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>