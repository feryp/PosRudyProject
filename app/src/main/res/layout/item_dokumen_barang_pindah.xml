<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="@dimen/margin_xsm">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_bottom">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_document"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_md"
                android:layout_marginStart="@dimen/margin_md"
                android:src="@drawable/ic_document_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_barang_pindah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_sm"
                android:layout_marginTop="@dimen/margin_md"
                android:fontFamily="@font/work_sans_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/font_sm"
                android:text="@string/title_dokumen_pemindahan_barang"
                app:layout_constraintBottom_toTopOf="@id/tv_no_dokumen_barang_pindah"
                app:layout_constraintStart_toEndOf="@id/ic_document"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_no_dokumen_barang_pindah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_sm"
                android:layout_marginTop="@dimen/margin_sm"
                android:fontFamily="@font/work_sans_semi_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/font_md"
                app:layout_constraintStart_toEndOf="@id/ic_document"
                app:layout_constraintTop_toBottomOf="@id/title_barang_pindah"
                tools:text="DOC-001" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_status_barang_pindah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_half_orange"
                android:fontFamily="@font/work_sans_medium"
                android:paddingStart="@dimen/padding_md"
                android:paddingTop="10dp"
                android:paddingEnd="@dimen/padding_md"
                android:paddingBottom="10dp"
                android:text="@string/status_pindah"
                android:textColor="@color/white"
                android:textSize="@dimen/font_sm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_top">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="@dimen/padding_md"
                android:paddingEnd="0dp"
                android:paddingBottom="@dimen/padding_md"
                android:paddingTop="@dimen/padding_lg"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans_medium"
                    android:text="@string/title_tanggal_jam"
                    android:textColor="@color/sonic_silver"
                    android:textSize="@dimen/font_sm" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_waktu_barang_pindah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans_medium"
                    android:textColor="@color/black_coral"
                    android:textSize="@dimen/font_md"
                    tools:text="10-08-2021, 15:55" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="end"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/padding_md"
                android:paddingBottom="@dimen/padding_md"
                android:paddingTop="@dimen/padding_lg"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans_medium"
                    android:text="@string/title_jumlah_barang"
                    android:textColor="@color/sonic_silver"
                    android:textSize="@dimen/font_sm" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_jumlah_barang_pindah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans_medium"
                    android:textColor="@color/black_coral"
                    android:textSize="@dimen/font_md"
                    tools:text="10 Barang" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>