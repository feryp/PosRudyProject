<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mode="same_level"
    app:dragEdge="right"
    android:id="@+id/swipe_reveal_layout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Secondary layout here -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center|end"
        android:padding="@dimen/padding_xsm"
        android:background="@color/misty_rose">

        <TextView
            android:id="@+id/tv_delete_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_hapus"
            android:textSize="@dimen/font_mds"
            android:textColor="@color/red_alert"
            android:fontFamily="@font/work_sans_regular"
            android:layout_marginEnd="@dimen/margin_sm"
            />

        <ImageView
            android:id="@+id/ic_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trash_red"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/todo"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- Main layout here -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_item_keranjang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_sm"
        android:background="@drawable/bg_border_top_bottom_platinum">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/im_barang_keranjang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/bg_border_cultured"
            tools:src="@drawable/im_example"
            android:scaleType="fitCenter"
            android:cropToPadding="true"
            android:adjustViewBounds="true"
            app:riv_corner_radius="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_desc_barang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/padding_sm"
            android:paddingEnd="@dimen/padding_sm"
            app:layout_constraintStart_toEndOf="@id/im_barang_keranjang"
            app:layout_constraintEnd_toStartOf="@id/container_btn_kuantitas"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_tipe_barang_keranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="CUTLINE"
                android:textSize="@dimen/font_sm"
                android:textColor="@color/black"
                android:fontFamily="@font/work_sans_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_artikel_barang_keranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="SP633846-0011"
                android:textSize="@dimen/font_mds"
                android:textColor="@color/black"
                android:fontFamily="@font/work_sans_semi_bold"
                android:layout_marginTop="@dimen/margin_xsm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tipe_barang_keranjang"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_nama_barang_keranjang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Mandarin Fade/Coral Matte - RP Optics Multilaser Red"
                android:textSize="@dimen/font_sm"
                android:textColor="@color/black_coral"
                android:fontFamily="@font/work_sans_regular"
                android:layout_marginTop="@dimen/margin_xsm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_artikel_barang_keranjang"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_nama_barang_keranjang"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_harga_barang_keranjang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Rp 1.000.000"
                    android:textSize="@dimen/font_sm"
                    android:textColor="@color/black_coral"
                    android:fontFamily="@font/work_sans_medium"
                    android:layout_marginTop="@dimen/margin_xsm" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kali"
                    android:textSize="@dimen/font_sm"
                    android:textColor="@color/black_coral"
                    android:fontFamily="@font/work_sans_medium"
                    android:layout_marginStart="@dimen/margin_xsm"
                    android:layout_marginTop="@dimen/margin_xsm" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_jumlah_barang_keranjang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2"
                    android:textSize="@dimen/font_sm"
                    android:textColor="@color/black_coral"
                    android:fontFamily="@font/work_sans_medium"
                    android:layout_marginStart="@dimen/margin_xsm"
                    android:layout_marginTop="@dimen/margin_xsm" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sama_dengan"
                    android:textSize="@dimen/font_sm"
                    android:textColor="@color/black_coral"
                    android:fontFamily="@font/work_sans_medium"
                    android:layout_marginStart="@dimen/margin_xsm"
                    android:layout_marginTop="@dimen/margin_xsm" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_total_harga_barang_keranjang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Rp 1.000.000"
                    android:textSize="@dimen/font_sm"
                    android:textColor="@color/black_coral"
                    android:fontFamily="@font/work_sans_medium"
                    android:layout_marginStart="@dimen/margin_xsm"
                    android:layout_marginTop="@dimen/margin_xsm" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_btn_kuantitas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/container_desc_barang"
            app:layout_constraintBottom_toBottomOf="@id/container_desc_barang">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_minus_keranjang"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_minus_white"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/et_qty_item_keranjang"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck,UnusedAttribute,TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_qty_item_keranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_xsm"
                android:layout_marginEnd="@dimen/margin_xsm"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:fontFamily="@font/work_sans_medium"
                android:gravity="center"
                android:hint="@string/txt_hint_0"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/font_sm"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_plus_keranjang"
                app:layout_constraintStart_toEndOf="@id/btn_minus_keranjang"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_plus_keranjang"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_plus_white"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/et_qty_item_keranjang"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck,UnusedAttribute,TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.chauthai.swipereveallayout.SwipeRevealLayout>