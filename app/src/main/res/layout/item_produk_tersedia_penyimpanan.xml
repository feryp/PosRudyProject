<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_sm"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_border_rounded_silver">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_md"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/im_barang_persediaan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/bg_border_cultured"
            tools:src="@drawable/im_example"
            android:scaleType="fitCenter"
            android:cropToPadding="true"
            android:adjustViewBounds="true"
            app:riv_corner_radius="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_desc_barang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/padding_sm"
            android:paddingEnd="@dimen/padding_sm"
            app:layout_constraintStart_toEndOf="@id/im_barang_persediaan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_tipe_barang_persediaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="CUTLINE"
                android:textSize="@dimen/font_sm"
                android:textColor="@color/black"
                android:fontFamily="@font/work_sans_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_artikel_barang_persediaan"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_artikel_barang_persediaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="SP633846-0011"
                android:textSize="@dimen/font_mds"
                android:textColor="@color/black"
                android:fontFamily="@font/work_sans_semi_bold"
                android:layout_marginTop="@dimen/margin_xsm"
                app:layout_constraintTop_toBottomOf="@id/tv_tipe_barang_persediaan"
                app:layout_constraintBottom_toTopOf="@id/tv_nama_barang_persediaan"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_nama_barang_persediaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Mandarin Fade/Coral Matte - RP Optics Multilaser Red"
                android:textSize="@dimen/font_sm"
                android:textColor="@color/black_coral"
                android:fontFamily="@font/work_sans_regular"
                android:layout_marginTop="@dimen/margin_xsm"
                app:layout_constraintTop_toBottomOf="@id/tv_artikel_barang_persediaan"
                app:layout_constraintBottom_toTopOf="@id/tv_harga_barang_persediaan"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_harga_barang_persediaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Rp 1.000.000"
                android:textSize="@dimen/font_mds"
                android:textColor="@color/black_gunmetal"
                android:fontFamily="@font/work_sans_medium"
                android:layout_marginTop="@dimen/margin_sm"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_nama_barang_persediaan"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/silver"
        app:layout_constraintTop_toBottomOf="@id/layout_top"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_md"
        app:layout_constraintTop_toBottomOf="@id/line">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_persediaan_stok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_persediaan_stok"
            android:textSize="@dimen/font_mds"
            android:textColor="@color/cadet_blue_crayola"
            android:fontFamily="@font/work_sans_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_alert_persediaan_stok"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_jumlah_stok_persediaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="100 Pcs"
            android:textSize="@dimen/font_mds"
            android:textColor="@color/black_coral"
            android:fontFamily="@font/work_sans_medium"
            app:layout_constraintTop_toTopOf="@id/title_persediaan_stok"
            app:layout_constraintBottom_toBottomOf="@id/title_persediaan_stok"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_alert_persediaan_stok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="@dimen/padding_sm"
            android:background="@drawable/bg_rounded_red_alert"
            android:layout_marginTop="@dimen/margin_sm"
            android:gravity="start"
            app:drawableEndCompat="@drawable/ic_info_white"
            android:text="@string/alert_stok_tinggal_sedikit"
            android:textSize="@dimen/font_sm"
            android:textColor="@color/white"
            android:fontFamily="@font/work_sans_italic"
            app:layout_constraintTop_toBottomOf="@id/title_persediaan_stok"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>