<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.akun.activity.DetailTransaksiSelesaiActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_detail_transaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:title="Detail Transaksi"
            app:titleTextColor="@color/black"
            app:navigationIcon="@drawable/ic_arrow_left_black"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.Tab" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintBottom_toTopOf="@id/layout_button">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_header_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/font_md"
                android:background="@drawable/bg_border_bottom_silver"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title_no_invoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_no_invoice"
                    android:textSize="@dimen/font_md"
                    android:textColor="@color/black"
                    android:fontFamily="@font/work_sans_semi_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_no_invoice_detail_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#INV001"
                    android:textSize="@dimen/font_mds"
                    android:textColor="@color/black"
                    android:fontFamily="@font/work_sans_semi_bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_desc_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_md"
                app:layout_constraintTop_toBottomOf="@id/container_header_detail">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title_tipe_pembayaran"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans_regular"
                    android:text="@string/title_tipe_pembayaran"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_sm"
                    app:layout_constraintEnd_toStartOf="@+id/tv_tipe_pembayaran_detail_transaksi"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_tipe_pembayaran_detail_transaksi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text="Tunai"
                    android:textSize="@dimen/font_sm"
                    android:textColor="@color/black"
                    android:fontFamily="@font/work_sans_regular"
                    app:layout_constraintStart_toEndOf="@id/title_tipe_pembayaran"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title_tgl_transaksi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_sm"
                    android:fontFamily="@font/work_sans_regular"
                    android:text="@string/title_tanggal_transaksi"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_sm"
                    app:layout_constraintEnd_toStartOf="@+id/tv_tgl_detail_transaksi"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_tipe_pembayaran" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_tgl_detail_transaksi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_sm"
                    android:textAlignment="textEnd"
                    android:text="07 Aug 2021, 10:09"
                    android:textSize="@dimen/font_sm"
                    android:textColor="@color/black"
                    android:fontFamily="@font/work_sans_regular"
                    app:layout_constraintStart_toEndOf="@id/title_tgl_transaksi"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_tipe_pembayaran_detail_transaksi" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title_nama_penjual_detail_transaksi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_sm"
                    android:fontFamily="@font/work_sans_regular"
                    android:text="@string/title_nama_penjual"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_sm"
                    app:layout_constraintEnd_toStartOf="@+id/tv_nama_penjual_detail_transaksi"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_tgl_detail_transaksi" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_nama_penjual_detail_transaksi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_sm"
                    android:textAlignment="textEnd"
                    android:text="Alex Parkinson"
                    android:textSize="@dimen/font_sm"
                    android:textColor="@color/black"
                    android:fontFamily="@font/work_sans_regular"
                    app:layout_constraintStart_toEndOf="@id/title_nama_penjual_detail_transaksi"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_tgl_detail_transaksi" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title_nama_pelanggan_transaksi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_sm"
                    android:fontFamily="@font/work_sans_regular"
                    android:text="@string/title_nama_pelanggan"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_sm"
                    app:layout_constraintEnd_toStartOf="@+id/tv_nama_pelanggan_detail_transaksi"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_nama_penjual_detail_transaksi" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_nama_pelanggan_detail_transaksi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_sm"
                    android:textAlignment="textEnd"
                    android:text="Herman"
                    android:textSize="@dimen/font_sm"
                    android:textColor="@color/black"
                    android:fontFamily="@font/work_sans_regular"
                    app:layout_constraintStart_toEndOf="@id/title_nama_pelanggan_transaksi"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_nama_penjual_detail_transaksi" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_detail_penjualan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_md"
                android:background="@drawable/bg_border_bottom_silver"
                android:text="@string/title_detail_penjualan"
                android:textSize="@dimen/font_md"
                android:textColor="@color/black"
                android:fontFamily="@font/work_sans_semi_bold"
                app:layout_constraintTop_toBottomOf="@id/container_desc_detail"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_detail_penjualan_transaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingStart="@dimen/padding_md"
                android:paddingEnd="@dimen/padding_md"
                app:layout_constraintBottom_toTopOf="@id/layout_diskon"
                app:layout_constraintTop_toBottomOf="@id/title_detail_penjualan" />



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_diskon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_md"
                android:paddingEnd="@dimen/padding_md"
                android:layout_marginTop="@dimen/margin_sm"
                app:layout_constraintTop_toBottomOf="@id/rv_detail_penjualan_transaksi">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans_medium"
                    android:text="@string/title_diskon"
                    android:textColor="@color/black_gunmetal"
                    android:textSize="@dimen/font_sm"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_diskon_detail_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans_semi_bold"
                    android:textColor="@color/black_coral"
                    android:textSize="@dimen/font_sm"
                    android:text="10%"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_md"
                android:paddingEnd="@dimen/padding_md"
                android:layout_marginTop="@dimen/margin_sm"
                app:layout_constraintTop_toBottomOf="@id/layout_diskon">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans_medium"
                    android:text="@string/title_total"
                    android:textColor="@color/black_gunmetal"
                    android:textSize="@dimen/font_sm"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_total_detail_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans_semi_bold"
                    android:textColor="@color/black_coral"
                    android:textSize="@dimen/font_sm"
                    android:text="Rp 1.000.000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/dotted_line"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="@dimen/margin_sm"
                android:layout_marginStart="@dimen/margin_md"
                android:layout_marginEnd="@dimen/margin_md"
                android:contentDescription="@string/todo"
                android:layerType="software"
                android:src="@drawable/dotted_line"
                app:layout_constraintTop_toBottomOf="@id/layout_total" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_di_bayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_md"
                android:paddingEnd="@dimen/padding_md"
                android:layout_marginTop="@dimen/margin_sm"
                app:layout_constraintTop_toBottomOf="@id/dotted_line">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans_medium"
                    android:text="@string/title_dibayar"
                    android:textColor="@color/black_gunmetal"
                    android:textSize="@dimen/font_sm"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_dibayar_detail_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans_semi_bold"
                    android:textColor="@color/black_coral"
                    android:textSize="@dimen/font_sm"
                    android:text="Rp 1.000.000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_kembalian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_md"
                android:paddingEnd="@dimen/padding_md"
                android:layout_marginTop="@dimen/margin_sm"
                app:layout_constraintTop_toBottomOf="@id/layout_di_bayar">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans_medium"
                    android:text="@string/title_total_kembalian"
                    android:textColor="@color/black_gunmetal"
                    android:textSize="@dimen/font_sm"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_total_kembalian_detail_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans_semi_bold"
                    android:textColor="@color/black_coral"
                    android:textSize="@dimen/font_sm"
                    android:text="Rp 0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_md"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_penukaran_barang"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="@string/btn_penukaran_barang"
            android:textSize="@dimen/font_md"
            android:textColor="@color/neon_blue_primary"
            android:textAllCaps="false"
            android:fontFamily="@font/work_sans_semi_bold"
            app:strokeColor="@color/neon_blue_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_cetak_struk" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cetak_struk"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            style="@style/Widget.MaterialComponents.Button"
            android:text="@string/btn_cetak_struk"
            android:textSize="@dimen/font_md"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/work_sans_semi_bold"
            app:layout_constraintTop_toBottomOf="@id/btn_penukaran_barang"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>