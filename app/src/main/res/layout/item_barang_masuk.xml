<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_bottom">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_tipe_barang_persediaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/work_sans_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/font_sm"
                app:layout_constraintBottom_toTopOf="@id/tv_artikel_barang_persediaan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="CUTLINE" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_artikel_barang_persediaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/margin_xsm"
                android:fontFamily="@font/work_sans_semi_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/font_mds"
                app:layout_constraintBottom_toTopOf="@id/tv_nama_barang_persediaan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tipe_barang_persediaan"
                tools:text="SP633846-0011" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_nama_barang_persediaan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/margin_xsm"
                android:fontFamily="@font/work_sans_regular"
                android:textColor="@color/black_coral"
                android:textSize="@dimen/font_sm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_artikel_barang_persediaan"
                tools:text="Mandarin Fade/Coral Matte - RP Optics Multilaser Red" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_status_barang_masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_half_green"
                android:fontFamily="@font/work_sans_medium"
                android:paddingStart="@dimen/padding_md"
                android:paddingTop="10dp"
                android:paddingEnd="@dimen/padding_md"
                android:paddingBottom="10dp"
                android:text="Masuk"
                android:textColor="@color/white"
                android:textSize="@dimen/font_sm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_top">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_waktu_barang_masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/work_sans_medium"
                android:text="Tanggal/Jam"
                android:textColor="@color/cadet_blue_crayola"
                android:textSize="@dimen/font_sm"
                app:layout_constraintBottom_toTopOf="@+id/tv_waktu_barang_masuk"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_waktu_barang_masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/work_sans_medium"
                android:textColor="@color/black_coral"
                android:textSize="@dimen/font_md"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_waktu_barang_masuk"
                tools:text="10-08-2021, 15:55" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_kuantitas_barang_masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/work_sans_medium"
                android:text="Kuantitas"
                android:textColor="@color/cadet_blue_crayola"
                android:textSize="@dimen/font_sm"
                app:layout_constraintBottom_toTopOf="@+id/tv_kuantitas_barang_masuk"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_kuantitas_barang_masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/work_sans_medium"
                android:textColor="@color/black_coral"
                android:textSize="@dimen/font_md"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/title_kuantitas_barang_masuk"
                app:layout_constraintTop_toBottomOf="@id/title_kuantitas_barang_masuk"
                tools:text="200 Pcs" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>